quarkus.http.ssl-port={{#portNumber}}{{add 8443 portOffset}}{{/portNumber}}

quarkus.hibernate-orm.blocking=false
quarkus.datasource.jdbc=false
quarkus.hibernate-orm.packages={{basePackage}}.common.domain
quarkus.index-dependency."common".group-id={{basePackage}}
quarkus.index-dependency."common".artifact-id=common
quarkus.hibernate-orm.enabled=true

# Micrometer configuration
quarkus.micrometer.export.prometheus.enabled=true
quarkus.micrometer.export.prometheus.path=/q/metrics
quarkus.micrometer.binder.http-server.enabled=true
quarkus.micrometer.binder.http-client.enabled=true

# gRPC client configuration for other services
quarkus.grpc.clients.orchestrator-service.host=localhost
quarkus.grpc.clients.orchestrator-service.port={{#portNumber}}{{add 8443 portOffset}}{{/portNumber}}
quarkus.grpc.clients.orchestrator-service.plain-text=false
quarkus.grpc.clients.orchestrator-service.use-quarkus-grpc-client=true
quarkus.grpc.clients.orchestrator-service.tls.enabled=true

# Docker image
quarkus.container-image.builder=jib
quarkus.container-image.registry=localhost
quarkus.container-image.group={{basePackage}}
quarkus.container-image.name={{serviceName}}
quarkus.container-image.tag=latest
